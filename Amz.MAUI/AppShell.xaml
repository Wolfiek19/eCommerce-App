<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Amz.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Amz.MAUI"
    xmlns:views="clr-namespace:Amz.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"   />
    <ShellContent
        Title="Inventory"
        ContentTemplate= "{DataTemplate views:InventoryManagementView}"
        Route="Inventory"/>
    <ShellContent
        Title="Store"
        ContentTemplate= "{DataTemplate views:StoreView }"
        Route="Store"/>
    <ShellContent 
        Title="Cart"
        ContentTemplate= "{DataTemplate views:CartView}"
        Route="Cart"/>
        


</Shell>
